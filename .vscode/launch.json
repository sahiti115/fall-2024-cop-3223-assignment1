{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch fracturing",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fracturing",  // Path to the executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build fracturing",  // Task to build the file
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}

  
   